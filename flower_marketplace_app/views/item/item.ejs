<%- include('../partials/header.ejs'); %>

<main>
    <section id="item">
        <img src="<%= item.image %>" class="item-image" alt="<%= item.title %>">
        <div class="item-info">
            <h2><%= item.title %></h2>
            <p>Condition: <%= item.condition %></p>
            <p>Price: <%= item.price %></p>
            <p>Seller: <%= item.seller %></p>
            <p><%= item.details %></p>
            <form action="/items/<%= item.id %>/edit">
                <button type="submit">
                  <i class="fa-regular fa-pen-to-square"></i> Edit
                </button>
              </form>
            <form action="/items/<%= item.id %>?_method=DELETE" method="POST">
                <button type="submit"><i class="fa-regular fa-trash-can"></i> Delete</button>
            </form>
        </div>
    </section>
</main>

<%- include('../partials/footer.ejs'); %>
